---
import BaseHead from "./BaseHead.astro"

type Props = {
  title: string
  description: string
  image?: string
}

const { title, description, image } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <link href="./prism.css" rel="stylesheet" />
  </head>

  <body>
    <slot />
  </body>
</html>
