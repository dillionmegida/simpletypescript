---
import { Prism } from "@astrojs/prism"

type Props = {
	code1: string
	code2: string
}

const { code1, code2 } = Astro.props
---

<div class="editor-wrapper">
	<div class="labels">
		<span>TS</span>
		<span>JS</span>
	</div>
	<div class="editor">
		<Prism code={code1} lang="ts" />
		<Prism code={code2} lang="js" />
	</div>

	<span class="arrow">
		<svg
			xmlns="http://www.w3.org/2000/svg"
			viewBox="0 0 24 24"
			width="18"
			height="18"
			fill="currentColor"
			><path
				d="M19.1642 12L12.9571 5.79291L11.5429 7.20712L16.3358 12L11.5429 16.7929L12.9571 18.2071L19.1642 12ZM13.5143 12L7.30722 5.79291L5.89301 7.20712L10.6859 12L5.89301 16.7929L7.30722 18.2071L13.5143 12Z"
			></path></svg
		>
	</span>
</div>

<style lang="scss">
	.editor-wrapper {
		position: relative;
	}
  
	.labels {
    font-size: 0.7em;
    position: relative;
    margin-bottom: -35px;

		span {
      width: max-content;
			background-color: var(--main-color);
			padding: 5px 10px;
			font-size: 0.7em;
			border: 2px solid var(--white-100);
      margin-left:30px;
		}
	}

	.editor,
	.labels {
		display: grid;
		grid-template-columns: 1fr 1fr;
		font-size: 0.9em;
	}

	.arrow {
		position: absolute;
		top: 20px;
		width: max-content;
		left: 0;
		right: 0;
		margin: 20px auto;
		color: white;
		background-color: var(--white-100);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		width: 30px;
		height: 30px;
	}
</style>
