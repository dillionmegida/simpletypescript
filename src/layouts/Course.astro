---
import BaseDocument from "../components/BaseDocument.astro"
import type { Tip, TipFrontmatter } from "../types/Tip"

type Props = TipFrontmatter

const { title, description, cover } = Astro.props
---

<BaseDocument image={cover} description={description} title={title}>
	<header class="container">
		<nav>
			<a href="/" class="brand">simple:<span>typescript</span></a>
		</nav>
	</header>
	<main class="container padding">
		<h1>{title}</h1>
		{
			cover ? (
				<div class="course-cover">
					<img src={cover} alt="" />
				</div>
			) : (
				<hr />
			)
		}
		<div class="content">
			<slot />
			<br />
		</div>
		<footer>
			<a href="/" class="brand">simple:<span>typescript</span></a>
		</footer>
	</main>
</BaseDocument>

<style is:global lang="scss">
	header.container {
		margin-top: 30px;
	}

	h1 {
		font-family: var(--heading-font);
	}

	nav {
		padding: 20px;
	}

	header a,
	footer a {
		background-color: var(--white-100);
		padding: 10px 20px;
		color: var(--text-color);
		transition: 300ms;
		border-radius: 3px;

		span {
			color: var(--yellow);
			margin-left: 5px;
		}

		&.brand {
			font-size: 1.3em;
		}

		&:hover {
			background-color: var(--white-200);
		}
	}

	.course-cover {
		margin: 30px 0;
		border: 4px solid var(--white-100);
		aspect-ratio: 16 / 9;
		width: 100%;
	}

	h2 {
		margin: 40px 0 10px;
	}

	hr {
		border-color: var(--white-200);
		margin: 50px 0;
		width: 40%;
	}

	.content {
		margin: 50px 0;
		padding: 0 0 50px;
		font-size: clamp(1rem, 7vw, 1.2rem);
		line-height: 1.4;

		ul {
			padding-left: 20px;
		}

		a {
			transition: 300ms;
			color: var(--green);

			&:hover {
				text-decoration: underline;
			}
		}
	}

	pre[class] {
		margin: 20px 0;
		border: 4px solid var(--white-100);
	}

	p {
		margin: 1em 0;
	}

	code:not([class]) {
		background-color: color-mix(in srgb, var(--primary-color), black 30%);
		padding: 3px;
		font-size: 0.9em;
	}
</style>
