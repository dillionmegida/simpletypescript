---
import type { LessonFrontmatter } from "../types/Course"
import Content from "./Content.astro"

type Props = LessonFrontmatter

const { title, description, cover } = Astro.props

const breadcrumbs = [
	{
		path: "/",
		label: "Home",
	},
	{
		path: "/course",
		label: "Course",
	},
]
---

<Content
	title={title}
	description={description}
	cover={cover}
	breadcrumbs={breadcrumbs}
>
	<slot />
</Content>
