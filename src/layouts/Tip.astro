---
import BaseDocument from "../components/BaseDocument.astro"
import type { Tip, TipFrontmatter } from "../types/Tip"

type Props = TipFrontmatter

const { title, description } = Astro.props
---

<BaseDocument description={description} title={title}>
	<header class="container">
		<nav>
			<a href="/" class="brand">simple:<span>typescript</span></a>
		</nav>
	</header>
	<main class="container padding">
		<h1>{title}</h1>
		<hr />
		<div class="content">
			<slot />
      <br/>
      <br/>
      <br/>
			<a href="/" class="brand">simple:<span>typescript</span></a>
		</div>
	</main>
</BaseDocument>

<style is:global lang="scss">
	header.container {
		margin-top: 30px;
	}

	nav {
		padding: 20px;

	}

  a {
    background-color: var(--white-100);
    padding: 10px 20px;
    color: var(--text-color);
    transition: 300ms;
    border-radius: 3px;

    span {
      color: var(--yellow);
      margin-left: 5px;
    }

    &.brand {
      font-size: 1.3em;
    }

    &:hover {
      background-color: var(--white-200);
    }
  }

	hr {
		border-color: var(--white-200);
		margin: 50px 0;
		width: 40%;
	}

	.content {
		margin: 50px 0;
		padding: 0 0 100px;
		font-size: clamp(1rem, 7vw, 1.3rem);
		line-height: 1.4;
	}

	pre[class] {
		margin: 20px 0;
		border: 4px solid var(--white-100);
	}

	p {
		margin: 1em 0;
	}

	code:not([class]) {
		background-color: color-mix(in srgb, var(--primary-color), black 30%);
		padding: 3px;
		font-size: 0.9em;
	}
</style>
