---
import BaseDocument from "../components/BaseDocument.astro"
import Course from "../components/Course.astro"
import Errors from "../components/Errors.astro"
import Link from "../components/Link.astro"
import Tips from "../components/Tips.astro"
import { LINKS } from "../constants"
import Layout from "../layouts/Layout.astro"
---

<BaseDocument
	title="Simple TypeScript"
	description="Simplified resources on TypeScript from tips to courses to solutions from beginner to advanced"
>
	<Layout>
		<main class="">
			<div class="container padding">
				<h1 class="main-title">simple:<span>typescript</span></h1>
				<a class="video" href={LINKS.oneHrVideo}
					><svg
						xmlns="http://www.w3.org/2000/svg"
						viewBox="0 0 24 24"
						width="24"
						height="24"
						fill="currentColor"
						><path
							d="M12.2439 4C12.778 4.00294 14.1143 4.01586 15.5341 4.07273L16.0375 4.09468C17.467 4.16236 18.8953 4.27798 19.6037 4.4755C20.5486 4.74095 21.2913 5.5155 21.5423 6.49732C21.942 8.05641 21.992 11.0994 21.9982 11.8358L21.9991 11.9884L21.9991 11.9991C21.9991 11.9991 21.9991 12.0028 21.9991 12.0099L21.9982 12.1625C21.992 12.8989 21.942 15.9419 21.5423 17.501C21.2878 18.4864 20.5451 19.261 19.6037 19.5228C18.8953 19.7203 17.467 19.8359 16.0375 19.9036L15.5341 19.9255C14.1143 19.9824 12.778 19.9953 12.2439 19.9983L12.0095 19.9991L11.9991 19.9991C11.9991 19.9991 11.9956 19.9991 11.9887 19.9991L11.7545 19.9983C10.6241 19.9921 5.89772 19.941 4.39451 19.5228C3.4496 19.2573 2.70692 18.4828 2.45587 17.501C2.0562 15.9419 2.00624 12.8989 2 12.1625V11.8358C2.00624 11.0994 2.0562 8.05641 2.45587 6.49732C2.7104 5.51186 3.45308 4.73732 4.39451 4.4755C5.89772 4.05723 10.6241 4.00622 11.7545 4H12.2439ZM9.99911 8.49914V15.4991L15.9991 11.9991L9.99911 8.49914Z"
						></path></svg
					> Learn TypeScript in 1 hour</a
				>
				<p class="tagline">
					Simplified resources on TypeScript from tips to courses to solutions
					from beginner to advanced, created by <Link
						newTab={true}
						href={LINKS.mainWebsite}>Dillion</Link
					>
				</p>
			</div>
			<Course />
			<Tips />
			<Errors />
		</main>
	</Layout>
</BaseDocument>

<style is:global lang="scss">
	main {
		font-size: clamp(1rem, 7vw, 1.2rem);
	}

	h1 {
		margin-bottom: 15px;

		&.main-title span {
			color: var(--yellow);
			margin-left: 5px;
		}
	}

	.video {
		display: inline-flex;
		gap: 10px;
		align-items: center;
		background-color: rgb(133, 41, 41);
		border: 2px solid rgb(168, 56, 56);
		padding: 20px;
		margin-bottom: 20px;
		margin-top: 10px;
		transition: background-color 300ms;
		border-radius: 3px;

		&:hover {
			background-color: rgb(168, 56, 56);
		}
	}

	.tagline {
		font-size: 1.1em;
		margin-bottom: 30px;
		text-wrap: balance;

		a {
			color: var(--green);
			transition: 300ms;

			&:hover {
				color: var(--blue);
			}
		}
	}
</style>
