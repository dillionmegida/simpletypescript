---
import { type CollectionEntry, getCollection } from "astro:content"
import Tip from "../../layouts/Tip.astro"
import type { Tip as TipType } from "../../types/Tip"

export async function getStaticPaths() {
	const tips: TipType[] = await getCollection("tip")
	return tips.map(tip => ({
		params: { slug: tip.slug },
		props: tip,
	}))
}
type Props = CollectionEntry<"tip">

const tip = Astro.props
const { Content } = await tip.render()
---

<Tip {...tip.data}>
	<Content />
</Tip>
